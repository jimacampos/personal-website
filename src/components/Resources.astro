---
import { siteConfig } from "../config";
const hasResources = siteConfig.resources && siteConfig.resources.length > 0;
---

{
  hasResources && (
    <section id="resources" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Resources
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.resources.map((resource, index) => (
                <div class="group relative">
                  <div class="block relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300 hover:bg-white hover:shadow-xl hover:border-gray-300">
                    <div class="space-y-4">
                      <div>
                        <span
                          class="text-sm font-mono"
                          style={{ color: siteConfig.accentColor }}
                        >
                          0{index + 1}
                        </span>
                        <div class="mt-1">
                          <span
                            class="inline-block px-2.5 py-1 bg-gray-900 text-white rounded-md text-xs font-medium mb-2"
                          >
                            {resource.topic}
                          </span>
                          <h3 class="text-xl sm:text-2xl font-bold text-gray-900">
                            {resource.title}
                          </h3>
                        </div>
                      </div>

                      <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
                        {resource.description}
                      </p>

                      {resource.urls && resource.urls.length > 0 && (
                        <div class="space-y-3 pt-2">
                          <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">
                            Useful Links
                          </h4>
                          <div class="space-y-2">
                            {resource.urls.map((link) => (
                              <a
                                href={link.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex items-center group/link p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200"
                              >
                                <div class="flex-shrink-0 w-2 h-2 rounded-full bg-gray-400 mr-3" />
                                <span class="text-sm sm:text-base text-gray-700 group-hover/link:text-gray-900 transition-colors duration-200">
                                  {link.title}
                                </span>
                                <svg
                                  class="w-3 h-3 ml-1 text-gray-400 group-hover/link:text-gray-600 transition-all duration-200"
                                  fill="none"
                                  stroke="currentColor"
                                  viewBox="0 0 24 24"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                  />
                                </svg>
                              </a>
                            ))}
                          </div>
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}